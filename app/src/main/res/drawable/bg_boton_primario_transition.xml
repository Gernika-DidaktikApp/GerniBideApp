<?xml version="1.0" encoding="utf-8"?>
<transition xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado inicial: deshabilitado (gris) -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btnDisabledShadow" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btnDisabled" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado final: habilitado (verde) -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/btnPrincipalShadow" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
            <item android:bottom="4dp">
                <shape android:shape="rectangle">
                    <solid android:color="@color/btnPrincipal" />
                    <corners android:radius="16dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</transition>
