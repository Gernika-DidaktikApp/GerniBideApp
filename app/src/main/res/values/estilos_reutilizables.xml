<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloBotonBase" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="EstiloBotonPrimario" parent="EstiloBotonBase">
        <item name="android:background">@drawable/bg_boton_primario</item>
    </style>

    <style name="EstiloBotonSecundario" parent="EstiloBotonBase">
        <item name="android:background">@drawable/bg_boton_secundario</item>
    </style>

    <style name="EstiloBotonCompletado" parent="EstiloBotonBase">
        <item name="android:background">@drawable/bg_boton_completado</item>
    </style>
</resources>