<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="EstiloBotonBase" parent="Widget.Material3.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">72dp</item>
        <item name="android:paddingHorizontal">32dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="backgroundTint">@null</item>
    </style>

    <style name="EstiloBotonPrimario" parent="EstiloBotonBase">
        <item name="android:background">@drawable/bg_boton_primario</item>
    </style>

    <style name="EstiloBotonSecundario" parent="EstiloBotonBase">
        <item name="android:background">@drawable/bg_boton_secundario</item>
    </style>

    <style name="EstiloBotonCompletado" parent="EstiloBotonBase">
        <item name="android:background">@drawable/bg_boton_completado</item>
    </style>

    <!-- ========================================
         ESTILOS DE IMAGEBUTTON
         Nota: backgroundTint="@null" preserva sombras de drawables custom
         ======================================== -->

    <!-- Base para ImageButtons con fondo del sistema -->
    <style name="EstiloImageButtonBase">
        <item name="android:background">?attr/selectableItemBackgroundBorderless</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- Controles de media (play/pause, pequeño) -->
    <style name="EstiloImageButtonMediaControl" parent="EstiloImageButtonBase">
        <item name="android:layout_width">@dimen/imagen_boton_pequeno</item>
        <item name="android:layout_height">@dimen/imagen_boton_pequeno</item>
        <item name="android:padding">@dimen/espaciado_xs</item>
    </style>

    <!-- ImageButtons medianos (settings, íconos generales) -->
    <style name="EstiloImageButtonMediano" parent="EstiloImageButtonBase">
        <item name="android:layout_width">@dimen/imagen_boton_mediano</item>
        <item name="android:layout_height">@dimen/imagen_boton_mediano</item>
        <item name="android:padding">@dimen/espaciado_sm</item>
    </style>

    <!-- ImageButtons con fondo custom (70dp - botones de juego de sonidos) -->
    <style name="EstiloImageButtonPrimario">
        <item name="android:layout_width">@dimen/imagen_boton_grande</item>
        <item name="android:layout_height">@dimen/imagen_boton_grande</item>
        <item name="android:background">@drawable/bg_boton_primario</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="EstiloImageButtonSecundario">
        <item name="android:layout_width">@dimen/imagen_boton_grande</item>
        <item name="android:layout_height">@dimen/imagen_boton_grande</item>
        <item name="android:background">@drawable/bg_boton_secundario</item>
        <item name="android:scaleType">center</item>
    </style>

    <!-- ImageButtons grandes (120dp - botones de emoji) -->
    <style name="EstiloImageButtonEmojoPrimario">
        <item name="android:layout_width">@dimen/imagen_boton_xlarge</item>
        <item name="android:layout_height">@dimen/imagen_boton_xlarge</item>
        <item name="android:background">@drawable/bg_boton_primario</item>
        <item name="android:padding">@dimen/espaciado_md</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <style name="EstiloImageButtonEmojoSecundario">
        <item name="android:layout_width">@dimen/imagen_boton_xlarge</item>
        <item name="android:layout_height">@dimen/imagen_boton_xlarge</item>
        <item name="android:background">@drawable/bg_boton_secundario</item>
        <item name="android:padding">@dimen/espaciado_md</item>
        <item name="android:scaleType">fitCenter</item>
    </style>

    <!-- Estilos de FAB -->
    <style name="EstiloFABPrimario">
        <item name="android:layout_width">@dimen/fab_ancho</item>
        <item name="android:layout_height">@dimen/fab_alto</item>
        <item name="android:background">@drawable/bg_fab_primario</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="EstiloFABSecundario">
        <item name="android:layout_width">@dimen/fab_mini_ancho</item>
        <item name="android:layout_height">@dimen/fab_mini_alto</item>
        <item name="android:background">@drawable/bg_fab_secundario</item>
        <item name="android:scaleType">center</item>
    </style>
</resources>