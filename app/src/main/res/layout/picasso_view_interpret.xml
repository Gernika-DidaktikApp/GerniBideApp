<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".picasso.ViewInterpretActivity">

        <!-- Título -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado_base"
            android:layout_marginTop="@dimen/espaciado_base"
            android:layout_marginEnd="@dimen/espaciado_base"
            android:text="@string/view_interpret_title"
            android:textAlignment="center"
            android:textAppearance="@style/AparienciaTexto.App.Encabezado.Primario"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Indicador de progreso -->
        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/espaciado_sm"
            android:text="@string/view_interpret_progress_placeholder"
            android:textAppearance="@style/AparienciaTexto.App.Cuerpo.Defecto"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- Imagen del elemento -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado_xl"
            android:layout_marginTop="@dimen/espaciado_base"
            android:layout_marginEnd="@dimen/espaciado_xl"
            app:cardCornerRadius="@dimen/radio_esquina_lg"
            app:cardElevation="@dimen/radio_esquina_sm"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressText">

            <ImageView
                android:id="@+id/elementImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/view_interpret_element_description"
                android:scaleType="fitCenter"
                tools:src="@drawable/picasso_zaldia" />
        </androidx.cardview.widget.CardView>

        <!-- Pregunta -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado_xl"
            android:layout_marginTop="@dimen/espaciado_xl"
            android:layout_marginEnd="@dimen/espaciado_xl"
            android:textAlignment="center"
            android:textAppearance="@style/AparienciaTexto.App.TituloMediano"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageCard"
            tools:text="¿Qué representa esta imagen?" />

        <!-- Opciones de respuesta -->
        <LinearLayout
            android:id="@+id/optionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado_xl"
            android:layout_marginTop="@dimen/espaciado_xl"
            android:layout_marginEnd="@dimen/espaciado_xl"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionText">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado_md"
                android:minHeight="60dp"
                android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/espaciado_base"
                android:paddingEnd="@dimen/espaciado_base"
                tools:text="Opción 1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado_md"
                android:minHeight="60dp"
                android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/espaciado_base"
                android:paddingEnd="@dimen/espaciado_base"
                tools:text="Opción 2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/espaciado_md"
                android:minHeight="60dp"
                android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/espaciado_base"
                android:paddingEnd="@dimen/espaciado_base"
                tools:text="Opción 3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="@dimen/espaciado_base"
                android:paddingEnd="@dimen/espaciado_base"
                tools:text="Opción 4" />
        </LinearLayout>

        <!-- Área de feedback -->
        <TextView
            android:id="@+id/feedbackText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado_xl"
            android:layout_marginTop="@dimen/espaciado_base"
            android:layout_marginEnd="@dimen/espaciado_xl"
            android:textAlignment="center"
            android:textColor="@color/greenSuccess"
            android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/optionsLayout"
            tools:text="¡Correcto! El caballo representa la fuerza del pueblo"
            tools:visibility="visible" />

        <!-- Botón siguiente -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            style="@style/EstiloBotonPrimario"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/espaciado_xl"
            android:layout_marginEnd="@dimen/espaciado_xl"
            android:layout_marginBottom="@dimen/espaciado_md"
            android:text="@string/view_interpret_next"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Botón volver (oculto hasta completar) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            style="@style/EstiloBotonSecundario"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/espaciado_xl"
            android:layout_marginEnd="@dimen/espaciado_xl"
            android:layout_marginBottom="@dimen/espaciado_xl"
            android:text="@string/itzuli"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>