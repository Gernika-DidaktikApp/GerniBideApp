<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".picasso.ViewInterpretActivity">

        <!-- Título -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/view_interpret_title"
            android:textAlignment="center"
            android:textColor="@color/btnPrincipal"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Indicador de progreso -->
        <TextView
            android:id="@+id/progressText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="1/6"
            android:textColor="#546E7A"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/titleText" />

        <!-- Imagen del elemento -->
        <androidx.cardview.widget.CardView
            android:id="@+id/imageCard"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/progressText">

            <ImageView
                android:id="@+id/elementImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                android:contentDescription="@string/view_interpret_element_description"
                android:scaleType="fitCenter"
                tools:src="@drawable/picasso_zaldia" />
        </androidx.cardview.widget.CardView>

        <!-- Pregunta -->
        <TextView
            android:id="@+id/questionText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:textAlignment="center"
            android:textColor="#2C3E50"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/imageCard"
            tools:text="¿Qué representa esta imagen?" />

        <!-- Opciones de respuesta -->
        <LinearLayout
            android:id="@+id/optionsLayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:orientation="vertical"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/questionText">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:minHeight="60dp"
                android:textSize="16sp"
                android:textColor="@color/txtPrincipal"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:text="Opción 1" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:minHeight="60dp"
                android:textSize="16sp"
                android:textColor="@color/txtPrincipal"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:text="Opción 2" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:minHeight="60dp"
                android:textSize="16sp"
                android:textColor="@color/txtPrincipal"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:text="Opción 3" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/option4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="60dp"
                android:textSize="16sp"
                android:textColor="@color/txtPrincipal"
                android:background="@drawable/bg_opcion_normal"
                android:textAlignment="textStart"
                android:paddingStart="16dp"
                android:paddingEnd="16dp"
                tools:text="Opción 4" />
        </LinearLayout>

        <!-- Área de feedback -->
        <TextView
            android:id="@+id/feedbackText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:textAlignment="center"
            android:textColor="#2E7D32"
            android:textSize="16sp"
            android:textStyle="bold"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/optionsLayout"
            tools:text="¡Correcto! El caballo representa la fuerza del pueblo"
            tools:visibility="visible" />

        <!-- Botón siguiente -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/nextButton"
            style="@style/EstiloBotonPrimario"
            android:layout_width="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="12dp"
            android:text="@string/view_interpret_next"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toTopOf="@id/btnBack"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Botón volver (oculto hasta completar) -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            style="@style/EstiloBotonSecundario"
            android:layout_width="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            android:text="@string/itzuli"
            android:textSize="18sp"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>