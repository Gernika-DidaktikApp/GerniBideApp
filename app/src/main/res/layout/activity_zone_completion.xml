<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/espaciado_xl">

        <es.didaktikapp.gernikapp.utils.SpriteAnimationView
            android:id="@+id/spriteAnimationView"
            android:layout_width="160dp"
            android:layout_height="180dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/espaciado_md"
            android:textAlignment="center"
            style="@style/AparienciaTexto.App.TituloGrande.Primario"
            app:layout_constraintTop_toBottomOf="@id/spriteAnimationView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tvZoneName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/espaciado_xs"
            android:textAlignment="center"
            style="@style/AparienciaTexto.App.Encabezado.Defecto"
            app:layout_constraintTop_toBottomOf="@id/tvMessage"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardScores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/espaciado_lg"
            app:cardCornerRadius="@dimen/radio_esquina_md"
            app:cardBackgroundColor="@color/white"
            app:cardElevation="2dp"
            app:layout_constraintTop_toBottomOf="@id/tvZoneName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/scoresContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingVertical="@dimen/espaciado_sm" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvTotalLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/espaciado_lg"
            android:text="@string/zone_total_score"
            style="@style/AparienciaTexto.App.Encabezado.Defecto"
            app:layout_constraintTop_toBottomOf="@id/cardScores"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvTotalScore" />

        <TextView
            android:id="@+id/tvTotalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/espaciado_lg"
            style="@style/AparienciaTexto.App.TituloGrande.Primario"
            app:layout_constraintTop_toBottomOf="@id/cardScores"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBaseline_toBaselineOf="@id/tvTotalLabel" />

        <Button
            android:id="@+id/btnContinue"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/boton_altura"
            android:layout_marginTop="@dimen/espaciado_xl"
            android:text="@string/zone_continue"
            style="@style/EstiloBotonPrimario"
            app:layout_constraintTop_toBottomOf="@id/tvTotalLabel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/espaciado_lg" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
