<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    tools:context=".fronton.MainFrontonActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Frontoia"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/btnPrincipal"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btnFrontonInfo"
        style="@style/EstiloBotonPrimario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:text="@string/informaci_n_del_front_n"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnPelota"
        style="@style/EstiloBotonPrimario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:text="@string/juego_pelota_dantzan"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnVideoValores"
        style="@style/EstiloBotonPrimario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:text="@string/video_y_valores"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnBalioak"
        style="@style/EstiloBotonPrimario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:text="@string/tu_valor_del_equipo"
        android:layout_marginBottom="12dp"/>

    <Button
        android:id="@+id/btnVolverMapa"
        style="@style/EstiloBotonSecundario"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="70dp"
        android:text="Itzuli mapara"
        android:layout_marginBottom="12dp"/>

</LinearLayout>
