<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="24dp"
    tools:context=".fronton.MainFrontonActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/frontoia"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/btnPrincipal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnFrontonInfo"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnFrontonInfo"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/informaci_n_del_front_n"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnPelota"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPelota"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/juego_pelota_dantzan"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnFrontonInfo"
        app:layout_constraintBottom_toTopOf="@id/btnVideoValores"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnVideoValores"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/video_y_valores"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnPelota"
        app:layout_constraintBottom_toTopOf="@id/btnBalioak"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBalioak"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/tu_valor_del_equipo"
        app:layout_constraintTop_toBottomOf="@id/btnVideoValores"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
