<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="24dp"
    tools:context=".picasso.PicassoActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/picasso_title"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/btnPrincipal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnKolorezBakea"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnKolorezBakea"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/picasso_activity_1"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnIkusiEtaAsmatu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnIkusiEtaAsmatu"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/picasso_activity_2"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnKolorezBakea"
        app:layout_constraintBottom_toTopOf="@id/btnNireMezua"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnNireMezua"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/picasso_activity_3"
        app:layout_constraintTop_toBottomOf="@id/btnIkusiEtaAsmatu"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
