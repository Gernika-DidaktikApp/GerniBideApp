<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo5"
    tools:context=".arbol.PuzzleActivity">

    <FrameLayout
        android:id="@+id/puzzleContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Guide Image (more visible for children) -->
        <ImageView
            android:id="@+id/guideImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:alpha="0.2"
            android:scaleType="fitCenter"
            android:src="@drawable/arbola_eta_batzar_etxea" />

    </FrameLayout>

    <TextView
        android:id="@+id/tvVictory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/espaciado_xl"
        android:layout_marginEnd="@dimen/espaciado_xl"
        android:text="@string/puzzle_victory"
        android:textColor="@color/btnSecundario"
        android:textAppearance="@style/AparienciaTexto.App.TituloMediano"
        android:visibility="gone"
        android:textAlignment="center"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintVertical_bias="0.25" />

    <Button
        android:id="@+id/btnBack"
        style="@style/EstiloBotonSecundario"
        android:layout_width="wrap_content"
        android:text="@string/itzuli"
        android:visibility="gone"
        android:elevation="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="@dimen/espaciado_xxl" />

</androidx.constraintlayout.widget.ConstraintLayout>