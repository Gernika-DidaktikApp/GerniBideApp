<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/arrastra_productos_titulo"
        android:textSize="22sp"
        android:textStyle="bold"
        android:textColor="@color/btnPrincipal"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/arrastra_instrucciones"
        android:textSize="16sp"
        android:textColor="@color/txtPrincipal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Área de puestos (zona superior) -->
    <LinearLayout
        android:id="@+id/layoutPuestos"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/tvInstrucciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Puesto 1: Lácteos -->
        <LinearLayout
            android:id="@+id/puesto0"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="0">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/plaza_postua"
                android:contentDescription="@string/puesto_lacteos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_lacteos"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center" />
        </LinearLayout>

        <!-- Puesto 2: Verduras -->
        <LinearLayout
            android:id="@+id/puesto1"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="1">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/plaza_postua"
                android:contentDescription="@string/puesto_verduras" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_verduras"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center" />
        </LinearLayout>

        <!-- Puesto 3: Panadería -->
        <LinearLayout
            android:id="@+id/puesto2"
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="2">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/plaza_postua"
                android:contentDescription="@string/puesto_panaderia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_panaderia"
                android:textSize="12sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center" />
        </LinearLayout>
    </LinearLayout>

    <!-- Área de productos (zona inferior) -->
    <GridLayout
        android:id="@+id/gridProductos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:columnCount="3"
        android:rowCount="3"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPuestos"
        app:layout_constraintBottom_toTopOf="@id/btnSiguiente"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <!-- Los productos se añadirán dinámicamente -->
    </GridLayout>

    <Button
        android:id="@+id/btnSiguiente"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/siguiente"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
