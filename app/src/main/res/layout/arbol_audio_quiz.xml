<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".arbol.MainActivity">

    <!-- Voice Info Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voiceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- Contenedor de la imagen -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="@dimen/media_container_width"
            android:layout_height="@dimen/image_container_height"
            android:background="@drawable/bg_video_container"
            android:clipToOutline="true"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_bias="0.25">

            <ImageView
                android:id="@+id/ivIntro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gernikako_arbola"
                android:contentDescription="@string/gernikako_arbola" />
        </FrameLayout>

        <!-- Contenedor para reproducir el audio -->
        <LinearLayout
            android:id="@+id/audioControls"
            android:layout_width="@dimen/media_container_width"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_video_controls"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="@dimen/espaciado_md"
            android:paddingHorizontal="@dimen/espaciado_md"
            app:layout_constraintTop_toBottomOf="@id/imageContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageButton
                android:id="@+id/btnPlayPause"
                style="@style/EstiloImageButtonMediaControl"
                android:src="@android:drawable/ic_media_play"
                android:contentDescription="@string/play_pause" />

            <SeekBar
                android:id="@+id/seekBarAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="@dimen/espaciado_sm"
                android:layout_marginEnd="@dimen/espaciado_sm"
                android:progressTint="@color/btnPrincipalShadow"
                android:thumbTint="@color/white" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_00_0_00"
                android:textAppearance="@style/AparienciaTexto.App.Caption"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:minWidth="@dimen/time_display_min_width"
                android:gravity="end" />
        </LinearLayout>

        <!-- Texto de ayuda del audio -->
        <TextView
            android:id="@+id/tvDescripcion"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/espaciado_xl"
            android:layout_marginEnd="@dimen/espaciado_xl"
            android:layout_marginTop="@dimen/espaciado_base"
            android:text="@string/video_arbol_texto"
            android:textAppearance="@style/AparienciaTexto.App.Cuerpo.Defecto"
            android:lineSpacingExtra="@dimen/espaciado_xs"
            android:justificationMode="inter_word"
            app:layout_constraintTop_toBottomOf="@id/audioControls"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintWidth_max="@dimen/text_content_max_width" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quiz Screen -->
    <ScrollView
        android:id="@+id/quizContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        android:fillViewport="true"
        app:layout_constraintBottom_toTopOf="@+id/btnVolver"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="@dimen/espaciado_base">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:padding="@dimen/espaciado_xl">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ulermen_galderak"
                android:textAlignment="center"
                android:textAppearance="@style/AparienciaTexto.App.Encabezado.Primario"
                android:layout_marginBottom="@dimen/espaciado_xl"/>

            <!-- Pregunta 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_1_zertarako_elkartzen_ziren_arbolaren_azpian"
                android:textAppearance="@style/AparienciaTexto.App.Cuerpo.Defecto"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/espaciado_sm"/>
            <Button
                android:id="@+id/q1a1"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/legeak_adosteko_eta_foruak_zin_egiteko"
                android:layout_marginBottom="@dimen/espaciado_xs"/>
            <Button
                android:id="@+id/q1a2"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/bazkaltzeko"
                android:layout_marginBottom="@dimen/espaciado_base"/>

            <!-- Pregunta 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_zer_adierazten_du_batzar_etxeak"
                android:textAppearance="@style/AparienciaTexto.App.Cuerpo.Defecto"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/espaciado_sm"/>
            <Button
                android:id="@+id/q2a1"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/euskal_herriko_demokrazia_eta_askatasuna"
                android:layout_marginBottom="@dimen/espaciado_xs"/>
            <Button
                android:id="@+id/q2a2"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/museo_soil_bat"
                android:layout_marginBottom="@dimen/espaciado_base"/>

            <!-- Pregunta 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_zertarako_erabiltzen_da_batzar_etxea"
                android:textAppearance="@style/AparienciaTexto.App.Cuerpo.Defecto"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/espaciado_sm"/>
            <Button
                android:id="@+id/q3a1"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/batzar_nagusiak_egiteko"
                android:layout_marginBottom="@dimen/espaciado_xs"/>
            <Button
                android:id="@+id/q3a2"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/kontzertuak_emateko"
                android:layout_marginBottom="@dimen/espaciado_base"/>

            <TextView
                android:id="@+id/tvCongrats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ondo_egin_duzu_orain_zure_arbola_sortzera_goaz"
                android:textAlignment="center"
                android:textAppearance="@style/AparienciaTexto.App.Encabezado"
                android:textStyle="bold"
                android:textColor="@color/correcto"
                android:visibility="gone"
                android:layout_marginTop="@dimen/espaciado_base"/>

        </LinearLayout>
    </ScrollView>

    <!-- BotÃ³n para volver hacia atras -->
    <Button
        android:id="@+id/btnVolver"
        style="@style/EstiloBotonSecundario"
        android:layout_width="wrap_content"
        android:layout_marginBottom="@dimen/espaciado_xl"
        android:text="@string/itzuli"
        android:enabled="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
