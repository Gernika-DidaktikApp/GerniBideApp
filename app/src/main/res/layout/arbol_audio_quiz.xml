<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2"
    tools:context=".arbol.MainActivity">

    <!-- Voice Info Screen -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/voiceContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <!-- Contenedor de la imagen con esquinas redondeadas -->
        <FrameLayout
            android:id="@+id/imageContainer"
            android:layout_width="359dp"
            android:layout_height="447dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_video_container"
            android:clipToOutline="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/ivIntro"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gernikako_arbola" />

        </FrameLayout>

        <LinearLayout
            android:id="@+id/audioControls"
            android:layout_width="359dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_video_controls"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:paddingHorizontal="12dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageContainer">

            <ImageButton
                android:id="@+id/btnPlayPause"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/play_pause"
                android:padding="6dp"
                android:src="@android:drawable/ic_media_play"
                app:tint="@color/white" />

            <SeekBar
                android:id="@+id/seekBarAudio"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:progressTint="@color/btnPrincipalShadow"
                android:thumbTint="@color/white" />

            <TextView
                android:id="@+id/tvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0_00_0_00"
                android:textColor="@color/white"
                android:textSize="14sp"
                android:textStyle="bold"
                android:minWidth="70dp"
                android:gravity="end" />

        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Quiz Screen -->
    <ScrollView
        android:id="@+id/quizContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@+id/btnVolver"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ulermen_galderak"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:textColor="@color/btnPrincipal"
                android:layout_marginBottom="24dp"/>

            <!-- Question 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_1_zertarako_elkartzen_ziren_arbolaren_azpian"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/q1a1"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/legeak_adosteko_eta_foruak_zin_egiteko"
                android:layout_marginBottom="4dp"/>
            <Button
                android:id="@+id/q1a2"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/bazkaltzeko"
                android:layout_marginBottom="16dp"/>

            <!-- Question 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_2_zer_adierazten_du_batzar_etxeak"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/q2a1"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/euskal_herriko_demokrazia_eta_askatasuna"
                android:layout_marginBottom="4dp"/>
            <Button
                android:id="@+id/q2a2"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/museo_soil_bat"
                android:layout_marginBottom="16dp"/>

            <!-- Question 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/_3_zertarako_erabiltzen_da_batzar_etxea"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="8dp"/>
            <Button
                android:id="@+id/q3a1"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/batzar_nagusiak_egiteko"
                android:layout_marginBottom="4dp"/>
            <Button
                android:id="@+id/q3a2"
                style="@style/EstiloBotonPrimario"
                android:layout_width="match_parent"
                android:text="@string/kontzertuak_emateko"
                android:layout_marginBottom="16dp"/>

            <TextView
                android:id="@+id/tvCongrats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ondo_egin_duzu_orain_zure_arbola_sortzera_goaz"
                android:textAlignment="center"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/correcto"
                android:visibility="gone"
                android:layout_marginTop="16dp"/>

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnVolver"
        style="@style/EstiloBotonSecundario"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:text="@string/itzuli"
        android:enabled="false"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
