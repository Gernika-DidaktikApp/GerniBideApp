<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="@string/photo_mission_titulo"
        android:textColor="@color/btnPrincipal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/photo_mission_descripcion"
        android:textSize="16sp"
        android:textColor="@color/txtPrincipal"
        android:gravity="center"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Vista previa de la foto tomada -->
    <ImageView
        android:id="@+id/ivFotoPreview"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/plaza_bg_producto"
        android:contentDescription="@string/photo_mission_preview_description"
        android:scaleType="centerCrop"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnTomarFoto"
        style="@style/EstiloBotonPrimario"
        android:layout_width="wrap_content"
        android:text="@string/photo_mission_tomar_foto"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Selector de etiquetas -->
    <TextView
        android:id="@+id/tvSeleccionarEtiqueta"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/photo_mission_seleccionar_etiqueta"
        android:textSize="16sp"
        android:textColor="@color/txtPrincipal"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/ivFotoPreview"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <RadioGroup
        android:id="@+id/rgEtiquetas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/tvSeleccionarEtiqueta"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbTradizioa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_mission_tradizioa"
            android:textSize="16sp"
            android:textColor="@color/txtPrincipal" />

        <RadioButton
            android:id="@+id/rbKomunitatea"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_mission_komunitatea"
            android:textSize="16sp"
            android:textColor="@color/txtPrincipal" />

        <RadioButton
            android:id="@+id/rbBizikidetza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/photo_mission_bizikidetza"
            android:textSize="16sp"
            android:textColor="@color/txtPrincipal" />
    </RadioGroup>

    <Button
        android:id="@+id/btnIgo"
        style="@style/EstiloBotonPrimario"
        android:layout_width="wrap_content"
        android:text="@string/photo_mission_igo"
        android:layout_marginTop="16dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/rgEtiquetas"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- GalerÃ­a colectiva -->
    <TextView
        android:id="@+id/tvGaleriaColectiva"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/btnPrincipal"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/btnIgo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvGaleria"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvGaleriaColectiva"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBack"
        style="@style/EstiloBotonPrimario"
        android:layout_width="wrap_content"
        android:text="@string/itzuli"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
