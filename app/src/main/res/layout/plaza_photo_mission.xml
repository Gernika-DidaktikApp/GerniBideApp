<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo6"
    android:orientation="vertical"
    android:padding="@dimen/espaciado_base">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvTitulo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/espaciado_xl"
                android:gravity="center"
                android:text="@string/photo_mission_titulo"
                android:textAppearance="@style/AparienciaTexto.App.Encabezado.Primario" />

            <TextView
                android:id="@+id/tvDescripcion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photo_mission_descripcion"
                android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
                android:gravity="center"
                android:layout_marginTop="@dimen/espaciado_sm" />

            <!-- Vista previa de la foto tomada -->
            <ImageView
                android:id="@+id/ivFotoPreview"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_marginTop="@dimen/espaciado_base"
                android:layout_gravity="center"
                android:background="@drawable/plaza_bg_producto"
                android:contentDescription="@string/photo_mission_preview_description"
                android:scaleType="centerCrop"
                android:visibility="gone" />

            <Button
                android:id="@+id/btnTomarFoto"
                style="@style/EstiloBotonPrimario"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/photo_mission_tomar_foto"
                android:layout_marginTop="@dimen/espaciado_base" />

            <!-- Selector de etiquetas -->
            <TextView
                android:id="@+id/tvSeleccionarEtiqueta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/photo_mission_seleccionar_etiqueta"
                android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
                android:gravity="center"
                android:layout_marginTop="@dimen/espaciado_base"
                android:visibility="gone" />

            <RadioGroup
                android:id="@+id/rgEtiquetas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/espaciado_sm"
                android:visibility="gone">

                <RadioButton
                    android:id="@+id/rbTradizioa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photo_mission_tradizioa"
                    android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto" />

                <RadioButton
                    android:id="@+id/rbKomunitatea"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photo_mission_komunitatea"
                    android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto" />

                <RadioButton
                    android:id="@+id/rbBizikidetza"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/photo_mission_bizikidetza"
                    android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto" />
            </RadioGroup>

            <Button
                android:id="@+id/btnIgo"
                style="@style/EstiloBotonPrimario"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:text="@string/photo_mission_igo"
                android:layout_marginTop="@dimen/espaciado_base"
                android:visibility="gone" />

            <!-- ProgressBar para carga de Cloudinary -->
            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/espaciado_base"
                android:visibility="gone" />

            <!-- GalerÃ­a colectiva -->
            <TextView
                android:id="@+id/tvGaleriaColectiva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAppearance="@style/AparienciaTexto.App.Encabezado.Primario"
                android:gravity="center"
                android:layout_marginTop="@dimen/espaciado_xl" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvGaleria"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/espaciado_sm"
                android:nestedScrollingEnabled="false"
                android:paddingBottom="@dimen/espaciado_base" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBack"
        style="@style/EstiloBotonSecundario"
        android:layout_width="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/espaciado_base"
        android:text="@string/itzuli"
        android:enabled="false" />

</LinearLayout>
