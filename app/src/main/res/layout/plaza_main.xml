<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="@dimen/espaciado_xl"
    tools:context=".plaza.MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/plaza_titulo"
        android:textAppearance="@style/AparienciaTexto.App.TituloGrande.Primario"
        app:layout_constraintBottom_toTopOf="@id/btnVideo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnVideo"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/espaciado_xxl"
        android:layout_marginBottom="@dimen/espaciado_md"
        android:text="@string/plaza_activity_1"
        app:layout_constraintBottom_toTopOf="@id/btnMercado"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo" />

    <Button
        android:id="@+id/btnMercado"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/espaciado_md"
        android:text="@string/plaza_activity_2"
        app:layout_constraintBottom_toTopOf="@id/btnVersos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVideo" />

    <Button
        android:id="@+id/btnVersos"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:layout_marginBottom="@dimen/espaciado_md"
        android:text="@string/plaza_activity_3"
        app:layout_constraintBottom_toTopOf="@id/btnFotos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnMercado" />

    <Button
        android:id="@+id/btnFotos"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/plaza_activity_4"
        app:layout_constraintBottom_toTopOf="@id/btnPuntuazioa"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnVersos" />

    <Button
        android:id="@+id/btnPuntuazioa"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/espaciado_md"
        android:text="@string/zone_view_scores"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnFotos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>