<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="@dimen/espaciado_xl"
    tools:context=".arbol.MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gernikako Arbola"
        android:textAppearance="@style/AparienciaTexto.App.TituloGrande.Primario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnAudioQuiz"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnAudioQuiz"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="1. Audio Quiz"
        android:layout_marginTop="@dimen/espaciado_xxl"
        android:layout_marginBottom="@dimen/espaciado_md"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnPuzzle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPuzzle"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="2. Puzzle"
        android:layout_marginBottom="@dimen/espaciado_md"
        app:layout_constraintTop_toBottomOf="@id/btnAudioQuiz"
        app:layout_constraintBottom_toTopOf="@id/btnInteractive"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnInteractive"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="3. Nire Arbola"
        app:layout_constraintTop_toBottomOf="@id/btnPuzzle"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
