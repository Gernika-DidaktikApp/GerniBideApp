<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fronton_frontoia">

    <!-- Pelota (rebota automáticamente) -->
    <ImageView
        android:id="@+id/ball"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:src="@drawable/fronton_pilota"
        android:layout_gravity="top|center_horizontal" />

    <!-- Zesta punta (mover con dedo táctil) -->
    <ImageView
        android:id="@+id/zesta"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:contentDescription="@string/zesta_punta_mugitu_pelota_jotzeko"
        android:src="@drawable/fronton_zesta_punta"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp" />

    <!-- Contador de puntos -->
    <TextView
        android:id="@+id/tvPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/puntuak_0"
        android:textSize="36sp"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowRadius="4"
        android:padding="16dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp"/>

    <!-- Dialogo de Game Over -->
    <LinearLayout
        android:id="@+id/gameOverDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="32dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <!-- Titulo de Game Over -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/game_over"
            android:textSize="48sp"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <!-- Puntuación final -->
        <TextView
            android:id="@+id/tvFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/puntuak_0"
            android:textSize="36sp"
            android:textColor="@color/white"
            android:layout_marginBottom="48dp"/>

        <!-- Botones del Game Over -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:clipChildren="false"
            android:clipToPadding="false">

            <!-- Reiniciar partida -->
            <Button
                android:id="@+id/btnReiniciar"
                style="@style/EstiloBotonPrimario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/saiatu_berriro"
                android:textSize="18sp"
                android:layout_marginEnd="12dp"/>

            <!-- Volver al menú principal -->
            <Button
                android:id="@+id/btnBack"
                style="@style/EstiloBotonPrimario"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:minHeight="48dp"
                android:text="@string/itzuli"
                android:textSize="18sp"
                android:layout_marginStart="12dp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
