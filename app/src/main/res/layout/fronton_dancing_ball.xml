<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/gameArea"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fronton_frontoia">

    <ImageView
        android:id="@+id/ball"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="@null"
        android:src="@drawable/fronton_pilota"
        android:layout_gravity="top|center_horizontal" />

    <ImageView
        android:id="@+id/zesta"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:contentDescription="@string/zesta_punta_mugitu_pelota_jotzeko"
        android:src="@drawable/fronton_zesta_punta"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_marginBottom="80dp" />

    <TextView
        android:id="@+id/tvPuntos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/puntuak_0"
        android:textSize="36sp"
        android:textColor="#FFFF00"
        android:textStyle="bold"
        android:shadowColor="#000000"
        android:shadowRadius="4"
        android:padding="16dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="50dp"/>

    <LinearLayout
        android:id="@+id/gameOverDialog"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#80000000"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="gone"
        android:padding="32dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ðŸŽ‰ GAME OVER"
            android:textSize="48sp"
            android:textColor="#FFEB3B"
            android:textStyle="bold"
            android:layout_marginBottom="24dp"/>

        <TextView
            android:id="@+id/tvFinalScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Puntuak: 0"
            android:textSize="36sp"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="48dp"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnReiniciar"
                style="@style/EstiloBotonPrimario"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Saiatu Berriro"
                android:textSize="20sp"
                android:layout_marginEnd="24dp"/>

            <Button
                android:id="@+id/btnSalir"
                style="@style/EstiloBotonSecundario"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:text="Atzera"
                android:textSize="20sp" />

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
