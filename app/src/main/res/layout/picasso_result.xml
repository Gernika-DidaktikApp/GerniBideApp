<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundLight"
    tools:context=".picasso.ResultActivity">

    <!-- Título -->
    <TextView
        android:id="@+id/titleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/espaciado_base"
        android:layout_marginTop="@dimen/espaciado_base"
        android:layout_marginEnd="@dimen/espaciado_base"
        android:text="@string/result_title"
        android:textAlignment="center"
        android:textAppearance="@style/AparienciaTexto.App.Encabezado.Primario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/subtitleText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/espaciado_base"
        android:layout_marginTop="@dimen/espaciado_sm"
        android:layout_marginEnd="@dimen/espaciado_base"
        android:text="@string/result_subtitle"
        android:textAlignment="center"
        android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/titleText" />

    <!-- Imagen del resultado -->
    <androidx.cardview.widget.CardView
        android:id="@+id/resultCard"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/espaciado_base"
        android:layout_marginTop="@dimen/espaciado_xl"
        android:layout_marginEnd="@dimen/espaciado_base"
        android:layout_marginBottom="@dimen/espaciado_base"
        app:cardCornerRadius="@dimen/radio_esquina_lg"
        app:cardElevation="@dimen/radio_esquina_sm"
        app:layout_constraintBottom_toTopOf="@id/buttonLayout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/subtitleText">

        <ImageView
            android:id="@+id/resultImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/result_image_description"
            android:scaleType="fitCenter" />
    </androidx.cardview.widget.CardView>

    <!-- Botones -->
    <LinearLayout
        android:id="@+id/buttonLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/espaciado_base"
        android:layout_marginEnd="@dimen/espaciado_base"
        android:layout_marginBottom="@dimen/espaciado_base"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnShare"
            style="@style/EstiloBotonPrimario"
            android:layout_width="0dp"
            android:layout_marginEnd="@dimen/espaciado_sm"
            android:layout_weight="1"
            android:text="@string/result_share" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBack"
            style="@style/EstiloBotonSecundario"
            android:layout_width="0dp"
            android:layout_marginStart="@dimen/espaciado_sm"
            android:layout_weight="1"
            android:text="@string/itzuli" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>