<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="@dimen/espaciado_xl"
    tools:context=".bunkers.MainActivity">

    <!-- Titulo de Bunkers -->
    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/bunkerrak"
        android:textAppearance="@style/AparienciaTexto.App.TituloGrande.Primario"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnVideoBunker"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Boton al video -->
    <Button
        android:id="@+id/btnVideoBunker"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/video_bunkers"
        android:layout_marginTop="@dimen/espaciado_xxl"
        android:layout_marginBottom="@dimen/espaciado_md"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnSoundGame"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Boton al soinu jokoa -->
    <Button
        android:id="@+id/btnSoundGame"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/_1_soinu_jokoa"
        android:layout_marginBottom="@dimen/espaciado_md"
        app:layout_constraintTop_toBottomOf="@id/btnVideoBunker"
        app:layout_constraintBottom_toTopOf="@id/btnPeaceMural"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Boton al bake murala -->
    <Button
        android:id="@+id/btnPeaceMural"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/_2_bake_murala"
        android:layout_marginBottom="@dimen/espaciado_md"
        app:layout_constraintTop_toBottomOf="@id/btnSoundGame"
        app:layout_constraintBottom_toTopOf="@id/btnReflection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Boton al hausnarketa -->
    <Button
        android:id="@+id/btnReflection"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="@string/_3_hausnarketa"
        android:layout_marginBottom="@dimen/espaciado_md"
        app:layout_constraintTop_toBottomOf="@id/btnPeaceMural"
        app:layout_constraintBottom_toTopOf="@id/btnPuntuazioa"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Boton para ver la puntuaciÃ³n -->
    <Button
        android:id="@+id/btnPuntuazioa"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:layout_marginTop="@dimen/espaciado_md"
        android:text="@string/zone_view_scores"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/btnReflection"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
