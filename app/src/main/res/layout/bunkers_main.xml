<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/base"
    android:padding="24dp"
    tools:context=".bunkers.MainActivity">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bunkerrak"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/btnPrincipal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btnSoundGame"
        app:layout_constraintVertical_chainStyle="packed" />

    <Button
        android:id="@+id/btnSoundGame"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="1. Soinu Jokoa"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintBottom_toTopOf="@id/btnPeaceMural"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnPeaceMural"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="2. Bake Murala"
        android:layout_marginBottom="12dp"
        app:layout_constraintTop_toBottomOf="@id/btnSoundGame"
        app:layout_constraintBottom_toTopOf="@id/btnReflection"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnReflection"
        style="@style/EstiloBotonPrimario"
        android:layout_width="0dp"
        android:text="3. Hausnarketa"
        app:layout_constraintTop_toBottomOf="@id/btnPeaceMural"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
