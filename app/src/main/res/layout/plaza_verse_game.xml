<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo5"
    android:padding="16dp">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espaciado_xxxl"
        android:gravity="center"
        android:text="@string/verso_titulo"
        android:textAppearance="@style/AparienciaTexto.App.Encabezado.Primario"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cardVerso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espaciado_xl"
        app:cardCornerRadius="@dimen/radio_esquina_md"
        app:cardElevation="@dimen/espaciado_md"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvVersoInicial"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/jendea_etorri_da"
            android:textAppearance="@style/AparienciaTexto.App.Cuerpo.Defecto"
            android:textStyle="italic"
            android:textColor="@color/btnPrincipal"
            android:padding="@dimen/espaciado_xl"
            android:gravity="center" />
    </androidx.cardview.widget.CardView>

    <RadioGroup
        android:id="@+id/radioGroupOpciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/espaciado_xl"
        app:layout_constraintTop_toBottomOf="@id/cardVerso"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <RadioButton
            android:id="@+id/rbOpcion1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/barazkiak_erostera"
            android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
            android:padding="@dimen/espaciado_base"
            android:layout_marginBottom="@dimen/espaciado_sm"
            android:layout_gravity="center"
            android:button="@null"
            android:background="@drawable/plaza_bg_product_selector" />

        <RadioButton
            android:id="@+id/rbOpcion2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/espaciado_sm"
            android:background="@drawable/plaza_bg_product_selector"
            android:button="@null"
            android:padding="@dimen/espaciado_base"
            android:text="@string/gerrikoa_jantzi"
            android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto" />

        <RadioButton
            android:id="@+id/rbOpcion3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/baina_ni_trizturaz"
            android:textAppearance="@style/AparienciaTexto.App.Etiqueta.Defecto"
            android:padding="@dimen/espaciado_base"
            android:layout_gravity="center"
            android:button="@null"
            android:background="@drawable/plaza_bg_product_selector" />
    </RadioGroup>

    <Button
        android:id="@+id/btnComprobar"
        style="@style/EstiloBotonPrimario"
        android:layout_width="wrap_content"
        android:text="@string/comprobar"
        android:layout_marginTop="@dimen/espaciado_xl"
        app:layout_constraintTop_toBottomOf="@id/radioGroupOpciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/btnBack"
        style="@style/EstiloBotonSecundario"
        android:layout_width="wrap_content"
        android:text="@string/itzuli"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
