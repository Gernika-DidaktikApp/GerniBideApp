<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    android:background="@color/base">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <!-- Título principal de la pantalla de ajustes -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/ezarpenak"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="@color/btnPrincipal"
                android:gravity="center"
                android:layout_marginBottom="40dp" />

            <!-- Icono botón Acerca de -->
            <ImageButton
                android:id="@+id/btnAbout"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_alignParentEnd="true"
                android:src="@android:drawable/ic_dialog_info"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="@string/honi_buruz"
                app:tint="#FF666666" />

        </RelativeLayout>

        <!-- Tarjeta: activar/desactivar sonido del juego -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/border_only">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/ikono_soinua"
                android:src="@android:drawable/ic_lock_silent_mode_off"
                android:layout_marginEnd="16dp"
                app:tint="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/soinuarekin"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/desaktibatu_soinua"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchMute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true" />
        </LinearLayout>

        <!-- Tarjeta: selección del tamaño de la letra de la app -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/border_only">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/ikono_letra_tamaina"
                android:src="@android:drawable/ic_menu_sort_by_size"
                android:layout_marginEnd="16dp"
                app:tint="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/letren_tamaina"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/aukeratu_tamaina"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray" />
            </LinearLayout>

            <Spinner
                android:id="@+id/spinnerTextSize"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:entries="@array/text_sizes" />
        </LinearLayout>

        <!-- Tarjeta: activar/desactivar el contraste de la app -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/border_only">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/ikono_daltonismo"
                android:src="@android:drawable/ic_menu_edit"
                android:layout_marginEnd="16dp"
                app:tint="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cambiar_contraste"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/cambiar_contraste_mensaje"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <androidx.appcompat.widget.SwitchCompat
                android:id="@+id/switchDaltonismo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>

        <!-- Tarjeta: selección de idioma de la aplicación -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="98dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp"
            android:padding="16dp"
            android:background="@drawable/border_only">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="@string/ikono_hizkuntza"
                android:src="@android:drawable/ic_menu_mapmode"
                android:layout_marginEnd="16dp"
                app:tint="?attr/colorOnSurface" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/hizkuntza"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/euskara_edo_gaztelania"
                    android:textSize="14sp"
                    android:textColor="@android:color/darker_gray"/>
            </LinearLayout>

            <Spinner
                android:id="@+id/spinnerLanguage"
                android:layout_width="wrap_content"
                android:layout_height="44dp"
                android:entries="@array/languages" />
        </LinearLayout>

        <!-- Botón para guardar los ajustes seleccionados -->
        <Button
            android:id="@+id/btnSaveSettings"
            style="@style/EstiloBotonPrimario"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:text="@string/ezarpenak_gorde"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

    </LinearLayout>

</ScrollView>