<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo2">

    <TextView
        android:id="@+id/tvTitulo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:padding="8dp"
        android:text="@string/arrastra_productos_titulo"
        android:textColor="@color/btnPrincipal"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvInstrucciones"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/arrastra_instrucciones"
        android:textSize="18sp"
        android:textColor="@color/txtPrincipal"
        android:gravity="center"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintTop_toBottomOf="@id/tvTitulo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Área de puestos (zona superior) -->
    <LinearLayout
        android:id="@+id/layoutPuestosRow1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="3"
        app:layout_constraintTop_toBottomOf="@id/tvInstrucciones"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Puesto 1: Lácteos -->
        <LinearLayout
            android:id="@+id/puesto0"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="0">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plaza_postua"
                android:scaleType="centerCrop"
                android:contentDescription="@string/puesto_lacteos" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_lacteos"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Puesto 2: Verduras -->
        <LinearLayout
            android:id="@+id/puesto1"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="1">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plaza_postua"
                android:scaleType="centerCrop"
                android:contentDescription="@string/puesto_verduras" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_verduras"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Puesto 3: Panadería -->
        <LinearLayout
            android:id="@+id/puesto2"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="2">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plaza_postua"
                android:scaleType="centerCrop"
                android:contentDescription="@string/puesto_panaderia" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_panaderia"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Segunda fila de puestos -->
    <LinearLayout
        android:id="@+id/layoutPuestosRow2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:weightSum="2"
        app:layout_constraintTop_toBottomOf="@id/layoutPuestosRow1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Puesto 4: Natural -->
        <LinearLayout
            android:id="@+id/puesto3"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="3">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plaza_postua"
                android:scaleType="centerCrop"
                android:contentDescription="@string/puesto_natural" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_natural"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <!-- Puesto 5: Artesanía -->
        <LinearLayout
            android:id="@+id/puesto4"
            android:layout_width="0dp"
            android:layout_height="75dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_margin="4dp"
            android:background="@drawable/plaza_bg_puesto"
            android:tag="4">

            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/plaza_postua"
                android:scaleType="centerCrop"
                android:contentDescription="@string/puesto_artesania" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/puesto_artesania"
                android:textSize="11sp"
                android:textStyle="bold"
                android:textColor="@color/txtPrincipal"
                android:gravity="center"
                android:layout_marginTop="4dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Área de productos (zona inferior) -->
    <ScrollView
        android:id="@+id/scrollProductos"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/layoutPuestosRow2"
        app:layout_constraintBottom_toTopOf="@id/btnBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <GridLayout
            android:id="@+id/gridProductos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="4"
            android:alignmentMode="alignBounds"
            android:useDefaultMargins="false"
            android:padding="8dp">
            <!-- Los productos se añadirán dinámicamente -->
        </GridLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnBack"
        style="@style/EstiloBotonSecundario"
        android:layout_width="wrap_content"
        android:text="@string/itzuli"
        android:layout_margin="16dp"
        android:enabled="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
