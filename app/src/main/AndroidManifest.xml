        <activity
            android:name=".fronton.CestaTipActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".fronton.DancingBallActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".fronton.InfoActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".fronton.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".fronton.ValuesGroupActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

