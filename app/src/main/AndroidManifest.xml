            android:name=".plaza.PhotoMissionActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".plaza.MainActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".plaza.VideoActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
        <activity
            android:name=".plaza.VerseGameActivity"
            android:screenOrientation="portrait"
            android:exported="false" />

        <!-- Actividades de picasso -->
        <activity
            android:name=".picasso.ColorPeaceActivity"
            android:screenOrientation="landscape"
            android:exported="false"
            android:resizeableActivity="true" />
        <activity
            android:name=".picasso.MyMessageActivity"
            android:screenOrientation="portrait"
            android:exported="false" />
